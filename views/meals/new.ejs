<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/meals/new.css" />
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <p>Please first ensure that the meal is not already listed below before adding a new meal:

  </p>
  <form id="add-meal-form" action="/meals" method="POST">
    <label for="name-input">Meal:</label>
    <input type="text" name="name" id="name-input">
    <button type="submit">Add Meal</button>
  </form><br>
  <ul>
    <% meals.forEach(function(meal){ %>
      <li><%= meal.name %></li>
    <% }) %> 
  </ul>
</main>

<%- include('../partials/footer') %>